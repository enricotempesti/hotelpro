{% extends '::base.html.twig' %}

{% block body -%}
    <h1>camere list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numerocamera</th>
                <th>Tipocamera</th>
                <th>Fotocamera</th>
                <th>Fotocamera1</th>
                <th>Fotocamera2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('camere_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numerocamera }}</td>
                <td>{{ entity.tipocamera }}</td>
                <td>{{ entity.fotocamera }}</td>
                <td>{{ entity.fotocamera1 }}</td>
                <td>{{ entity.fotocamera2 }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('camere_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('camere_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('camere_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
